import java.util.Scanner;

public class NumberSystem_2_ConvertionIntoBinary {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        // Decimal to Binary
        System.out.print("Decimal Value: ");
        int dec = input.nextInt();
        String bin1 = Integer.toBinaryString(dec);
        System.out.println(dec + " (decimal) : " + bin1 + " (Binary)");
        input.nextLine();
        // Hexa-deimal to Binary
        System.out.print("Hexa-Decimal Value: ");
        String hexa = input.nextLine();
        int dec_value = Integer.parseInt(hexa, 16);
        String bin2 = Integer.toBinaryString(dec_value);
        System.out.println(hexa + " (hexa-decimal) : " + bin2 + " (Binary)");
        // Octal to Binary
        System.out.print("Octal Value: ");
        String octal = input.nextLine();
        int decimal_value = Integer.parseInt(octal, 8);
        String bin3 = Integer.toBinaryString(decimal_value);
        System.out.println(octal + " (octal) : " + bin3 + " (Binary)");
    }
}
