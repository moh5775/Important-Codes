
import java.util.Scanner;

public class String_24_ReplaceFirstOccuranceOfACharacterWithAnother {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter String: ");
        String str = input.nextLine();
        System.out.print("Replace: ");
        char old = input.nextLine().charAt(0);
        System.out.print("Replace with: ");
        char neo = input.nextLine().charAt(0);
        int index = str.indexOf(old);
        if (index != -1) {
            str = str.substring(0, index) + neo + str.substring(index + 1);
        }
        System.out.print("Modified String: " + str);
    }
}
